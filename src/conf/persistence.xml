<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="SGLPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>beans.Grupo</class>
    <class>beans.Aluguel</class>
    <class>beans.DedoDuro</class>
    <class>beans.Imovel</class>
    <class>beans.ObservacaoAluguel</class>
    <class>beans.Permissoes</class>
    <class>beans.FotoImovel</class>
    <class>beans.DocumentoImovel</class>
    <class>beans.Documento</class>
    <class>beans.Usuario</class>
    <class>beans.Pessoa</class>
    <class>beans.DocumentoPessoa</class>
    <class>beans.DocumentoAluguel</class>
    <class>beans.PagamentoAluguel</class>
    <class>beans.Endereco</class>
    <class>beans.LocatarioAluguel</class>
    <class>beans.LocatarioImovel</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/sgl?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="root"/>
    </properties>
  </persistence-unit>
</persistence>
